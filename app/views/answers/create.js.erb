$('.answer-errors').html('<%= render 'shared/errors', resource: @answer %>'); 

<% unless @answer.errors.present? %>
  $('#question-' + <%= @question.id %>).find('.answers-block').append("<%= j render @answer %>")
  $('.new-answer-form').hide();
  $('#question-' + <%= @question.id %>).find('.answer-link').toggle();
<% end %>  
